<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:padding="8dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rlFavourateMalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlight_color"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgFavourateMalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/favourite_malls"
                android:paddingTop="10dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtFavourateMalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgFavourateMalls"
                android:text="FAVOURATE\nMALLS"
                android:gravity="center"
                android:textSize="10sp"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlOffers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlight_color"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/offers"
                android:paddingTop="10dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgOffers"
                android:text="OFFERS"
                android:lines="2"
                android:gravity="center|top"
                android:textSize="10sp"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlight_color"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/events"
                android:paddingTop="10dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgEvents"
                android:text="EVENTS"
                android:lines="2"
                android:gravity="center|top"
                android:textSize="10sp"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/highlight_color"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/offers"
                android:paddingTop="10dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgSearch"
                android:text="SEARCH"
                android:lines="2"
                android:gravity="center|top"
                android:textSize="10sp"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>